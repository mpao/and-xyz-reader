<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>
    <style name="AppTheme.Detail">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="AppTheme.xyzFab" parent="AppTheme">
        <item name="android:elevation">@dimen/fab_elevation</item>
    </style>
    <style name="AppTheme.xyzAppbar" parent="AppTheme">
        <item name="android:elevation">@dimen/appbar_elevation</item>
    </style>
</resources>